@model Context.Models.UserBook

@{
    ViewData["Title"] = "Details";
}

<h2>
    @Html.DisplayFor(model => model.Book.Title)
</h2>

<div>
    <h4> @Html.DisplayFor(model => model.Book.AuthorFirstName) @Html.DisplayFor(model => model.Book.AuthorLastName)</h4>
    <a asp-action="ViewCountryInfo" asp-route-id="@Model.UserBookId" class="cyan-text text-darken-4"> 
        @Html.DisplayFor(model => model.Book.Country)
    </a>
    <hr />
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s3"><a href="#author">Author</a></li>
                <li class="tab col s3"><a href="#book">Book</a></li>
                <li class="tab col s3"><a href="#context">Context</a></li>
                <li class="tab col s3"><a href="#comments">Comments</a></li>
            </ul>
        </div>
    </div>
    <br />
    <div class="row" id="author">
        <div class="col s12">
            <h4 class="right-align">The Author</h4>
            <br />
            <p>@Html.DisplayFor(model => model.Book.AuthorInfo)</p>
        </div>
    </div>
    <br />
    <hr />

    <div class="row" id="book">
        <div class="col s12">
            <h4 class="left-align">The Book</h4>
            <br />
            <p>@Html.DisplayFor(model => model.Book.BookInfo)</p>
        </div>
    </div>
    <br />
    <hr />
    <div class="row" id="context">
        <div class="col s12">
            <h4 class="center-align">The Context</h4>
            <br />
            <p>@Html.DisplayFor(model => model.Book.HistoricalInfo)</p>
        </div>
    </div>
    <br />
    <hr />
    <br />
    <div class="row" id="comments">
        <div class="col s2"></div>
        <div class="col s8 center-align">
            <div class="card blue-grey lighten-5">
                <div class="card-content">
                    <span class="card-title center-align">Comments</span>
                    <hr />
                    <br />
                    <p class="left-align">
                        @Html.DisplayFor(model => model.Comments)
                    </p>
                </div>
                <div class="card-action cyan lighten-5">
                    <a asp-action="Edit" asp-route-id="@Model.UserBookId" class="btn">Edit</a>


                </div>
            </div>
        </div>
    </div>
    <div class="col s2"></div>


</div>
<div>

    <a asp-action="Index" class="teal-text text-accent-3"><i class="small material-icons">reply_all</i></a>
    <a asp-action="Delete" asp-route-id="@Model.UserBookId" class="pink-text text-darken-1">
        <i class="small material-icons">delete_forever</i>
    </a>
    <a asp-action="ViewCountryInfo" asp-route-id="@Model.UserBookId" class="cyan-text text-darken-4">
        <i class="material-icons">public</i>

    </a>


</div>
