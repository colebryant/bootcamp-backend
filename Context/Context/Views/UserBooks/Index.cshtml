@model IEnumerable<Context.Models.UserBook>

@{
    ViewData["Title"] = "Index";
}

<h2>
    The Book Shelf
</h2>
<hr />
<br />

    <div class="row">
@foreach (var item in Model)
{
        <div class="col s12 m6">
            <div class="card blue-grey lighten-5 hoverable">
                <div class="card-content">
                    <span class="card-title">@Html.DisplayFor(modelItem => item.Book.Title)</span>
                    <p>
                        @Html.DisplayFor(modelItem => item.Book.AuthorFirstName) @Html.DisplayFor(modelItem => item.Book.AuthorLastName)
                    </p>
                    <hr />
                    <p class="truncate"> @Html.DisplayFor(modelItem => item.Book.BookInfo)</p>
                </div>
                <div class="card-action cyan lighten-5 valign-wrapper">
                
                    <a asp-action="Details" asp-route-id="@item.UserBookId" class="cyan-text text-darken-4">See More</a>

              
                    <a asp-action="Delete" asp-route-id="@item.UserBookId" class="pink-text text-darken-1">
                       <i class="small material-icons">delete_forever</i>
                    </a>
               
                    </div>
            </div>
        </div>

}
    </div>

